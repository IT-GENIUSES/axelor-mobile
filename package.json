{
  "name": "aos-mobile",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/demo",
      "**/demo/**"
    ]
  },
  "scripts": {
    "clean": "find . -type d -name node_modules | xargs rm -rf && rm -rf yarn.lock",
    "start": "yarn workspace @aos-mobile/demo start",
    "android": "yarn workspace @aos-mobile/demo android",
    "format:check": "yarn workspaces run format:check",
    "format": "yarn workspaces run format",
    "lint": "yarn workspaces run lint",
    "test": "yarn workspaces run test"
  }
}
